<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h1 class="text-center">Add a review to <%= @restaurant.name %></h1>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <%= simple_form_for [@restaurant, @review] do |f| %>
        <%= f.input :content, input_html: { placeholder: "Please review this restaurant" } %>
        <%= f.input :rating,collection: 1..5, prompt: "Nb of stars", selected: 2 %>
        <%= f.submit class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>



