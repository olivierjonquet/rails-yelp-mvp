<% content_for(:title) do %>
  Welcome chez Olivier advice
<% end %>

<div class="container">

  <div class="row">
    <div class="col-xs-12">
      <h1>List of all restaurants</h1>
      <%= link_to "Add a new restaurant", new_restaurant_path %>
    </div>
  </div>

  <div class="row">
    <% @restaurants.each do |restaurant| %>
      <div class="col-xs-12 col-sm-4">
         <h3>
           <%= restaurant.name %>
        </h3>
        <p>
           <%= restaurant.address %>
        </p>
        <p>
          <%= restaurant.phone_number %>
         </p>
        <p>
          <%= restaurant.category %>
        </p>
        <%= link_to "See details", restaurant_path(restaurant), class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
